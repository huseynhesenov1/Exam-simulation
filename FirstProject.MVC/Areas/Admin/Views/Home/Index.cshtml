@using FirstProject.Core.Entities
@model ICollection<Cart>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Cart Tables</h1>
     

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <button class="btn btn-success mb-3">Create</button>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Imgpath</th>
                            <th>IsDeleted</th>
                            <th>Update</th>
                            <th>SoftDelete</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Imgpath</th>
                            <th>IsDeleted</th>
                            <th>Update</th>
                            <th>SoftDelete</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.Imgpath</td>
                                <td>@item.IsDeleted</td>
                                <td> <button class="btn btn-primary">Update</button> </td>
                                <td> <button class="btn btn-danger">SoftDelete</button> </td>
                            
                                
                            </tr>

                        }

                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->